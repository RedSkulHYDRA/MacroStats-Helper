<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Usage stats permission (special permission) -->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MacroStatsHelper"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MacroStatsHelper.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Settings Activity -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="Display Settings"
            android:theme="@style/Theme.MacroStatsHelper.NoActionBar" />

        <!-- QS Tile Settings Activity -->
        <activity
            android:name=".QSTileSettingsActivity"
            android:exported="false"
            android:label="QS Tile Settings"
            android:theme="@style/Theme.MacroStatsHelper.NoActionBar" />

        <!-- Foreground service for continuous monitoring -->
        <service
            android:name=".DataUsageService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- BroadcastReceiver for Update Stats button -->
        <receiver
            android:name=".UpdateStatsReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.redskul.macrostatshelper.UPDATE_STATS" />
            </intent-filter>
        </receiver>

        <!-- QS Tile Services -->
        <service
            android:name=".WiFiDataUsageQSTileService"
            android:exported="true"
            android:icon="@drawable/ic_wifi"
            android:label="@string/wifi_usage"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <service
            android:name=".MobileDataUsageQSTileService"
            android:exported="true"
            android:icon="@drawable/ic_mobile"
            android:label="@string/mobile_data"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

    </application>
</manifest>
