<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".settings.QSTileSettingsActivity">

    <LinearLayout
        android:id="@+id/qs_settings_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_settings">

        <TextView
            android:id="@+id/qs_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/qs_tile_settings_title"
            android:textSize="@dimen/text_size_large_title"
            android:textStyle="bold"
            android:paddingBottom="@dimen/spacing_xl" />

        <TextView
            android:id="@+id/qs_instruction_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/qs_tile_instruction"
            android:textSize="@dimen/text_size_body"
            android:alpha="0.8"
            android:paddingBottom="@dimen/spacing_lg" />

        <!-- Vibration Settings Card -->
        <LinearLayout
            android:id="@+id/vibration_settings_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:layout_marginBottom="@dimen/spacing_md">

            <TextView
                android:id="@+id/vibration_settings_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vibration_settings_title"
                android:textSize="@dimen/text_size_heading"
                android:textStyle="bold"
                android:paddingBottom="@dimen/spacing_sm" />

            <TextView
                android:id="@+id/vibration_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tile_vibration_description"
                android:textSize="@dimen/text_size_small"
                android:alpha="0.7"
                android:paddingBottom="@dimen/spacing_md" />

            <LinearLayout
                android:id="@+id/vibration_switch_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vibration_switch_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/enable_tile_vibration"
                    android:textSize="@dimen/text_size_body" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/vibration_enabled_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <!-- Data Usage Tiles Card -->
        <LinearLayout
            android:id="@+id/data_usage_tiles_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:layout_marginBottom="@dimen/spacing_md">

            <TextView
                android:id="@+id/data_tiles_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_usage_tiles_title"
                android:textSize="@dimen/text_size_heading"
                android:textStyle="bold"
                android:paddingBottom="@dimen/spacing_sm" />

            <TextView
                android:id="@+id/data_usage_tiles_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_usage_tiles_description"
                android:textSize="@dimen/text_size_small"
                android:alpha="0.7"
                android:paddingBottom="@dimen/spacing_md" />

            <LinearLayout
                android:id="@+id/period_switch_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_sm">

                <TextView
                    android:id="@+id/period_switch_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/enable_tile_heading"
                    android:textSize="@dimen/text_size_subheading" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/show_period_in_title_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- WiFi Tile Section -->
            <TextView
                android:id="@+id/wifi_tile_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wifi_tile_label"
                android:textSize="@dimen/text_size_subheading"
                android:textStyle="bold"
                android:paddingTop="@dimen/spacing_md"
                android:paddingBottom="@dimen/spacing_sm" />

            <TextView
                android:id="@+id/wifi_tile_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wifi_tile_description"
                android:textSize="@dimen/text_size_body"
                android:alpha="0.8"
                android:paddingBottom="@dimen/spacing_sm" />

            <RadioGroup
                android:id="@+id/wifi_tile_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/wifi_daily"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/daily" />

                <RadioButton
                    android:id="@+id/wifi_weekly"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/weekly" />

                <RadioButton
                    android:id="@+id/wifi_monthly"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/monthly" />

            </RadioGroup>

            <!-- Mobile Tile Section -->
            <TextView
                android:id="@+id/mobile_tile_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mobile_tile_label"
                android:textSize="@dimen/text_size_subheading"
                android:textStyle="bold"
                android:paddingTop="@dimen/spacing_md"
                android:paddingBottom="@dimen/spacing_sm" />

            <TextView
                android:id="@+id/mobile_tile_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mobile_tile_description"
                android:textSize="@dimen/text_size_body"
                android:alpha="0.8"
                android:paddingBottom="@dimen/spacing_md" />

            <RadioGroup
                android:id="@+id/mobile_tile_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/mobile_daily"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/daily" />

                <RadioButton
                    android:id="@+id/mobile_weekly"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/weekly" />

                <RadioButton
                    android:id="@+id/mobile_monthly"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/monthly" />

            </RadioGroup>

            <!-- Usage Access Permission Status -->
            <TextView
                android:id="@+id/usage_access_status_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:paddingTop="@dimen/spacing_md"
                android:paddingBottom="@dimen/spacing_md" />

            <Button
                android:id="@+id/qs_usage_access_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/button_padding_small_horizontal"
                android:paddingVertical="@dimen/button_padding_small_vertical"
                android:text="@string/open_usage_access_settings"
                android:textSize="@dimen/text_size_body" />

        </LinearLayout>

        <!-- Screen Timeout Card -->
        <LinearLayout
            android:id="@+id/screen_timeout_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:layout_marginBottom="@dimen/spacing_md">

            <TextView
                android:id="@+id/screen_timeout_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/screen_timeout_tile_label"
                android:textSize="@dimen/text_size_heading"
                android:textStyle="bold"
                android:paddingBottom="@dimen/spacing_sm" />

            <TextView
                android:id="@+id/screen_timeout_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/screen_timeout_tile_description"
                android:textSize="@dimen/text_size_small"
                android:alpha="0.7"
                android:paddingBottom="@dimen/spacing_md" />

            <LinearLayout
                android:id="@+id/timeout_switch_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_md">

                <TextView
                    android:id="@+id/timeout_switch_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/enable_tile_heading"
                    android:textSize="@dimen/text_size_subheading" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/show_screen_timeout_in_title_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- Write Settings Permission Status -->
            <TextView
                android:id="@+id/write_settings_status_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:paddingTop="@dimen/spacing_md"
                android:paddingBottom="@dimen/spacing_md" />

            <Button
                android:id="@+id/write_settings_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_write_settings"
                android:textSize="@dimen/text_size_body"
                android:paddingHorizontal="@dimen/button_padding_small_horizontal"
                android:paddingVertical="@dimen/button_padding_small_vertical" />

        </LinearLayout>

        <!-- Battery Tiles Card -->
        <LinearLayout
            android:id="@+id/battery_tiles_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:layout_marginBottom="@dimen/spacing_md">

            <TextView
                android:id="@+id/battery_tiles_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/battery_tiles_title"
                android:textSize="@dimen/text_size_heading"
                android:textStyle="bold"
                android:paddingBottom="@dimen/spacing_sm" />

            <TextView
                android:id="@+id/battery_tiles_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/battery_tiles_description"
                android:textSize="@dimen/text_size_small"
                android:alpha="0.7"
                android:paddingBottom="@dimen/spacing_md" />

            <!-- Charge Cycles Section -->
            <TextView
                android:id="@+id/charge_tile_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/charge_tile_label"
                android:textSize="@dimen/text_size_subheading"
                android:textStyle="bold"
                android:paddingBottom="@dimen/spacing_sm" />

            <LinearLayout
                android:id="@+id/charge_switch_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_sm">

                <TextView
                    android:id="@+id/charge_switch_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/enable_tile_heading"
                    android:textSize="@dimen/text_size_subheading" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/show_charge_in_title_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- Battery Health Section -->
            <TextView
                android:id="@+id/battery_health_tile_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/battery_health_tile_label"
                android:textSize="@dimen/text_size_subheading"
                android:textStyle="bold"
                android:paddingTop="@dimen/spacing_md"
                android:paddingBottom="@dimen/spacing_sm" />

            <LinearLayout
                android:id="@+id/health_switch_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_sm">

                <TextView
                    android:id="@+id/health_switch_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/enable_tile_heading"
                    android:textSize="@dimen/text_size_subheading" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/show_battery_health_in_title_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- Design Capacity Input -->
            <TextView
                android:id="@+id/design_capacity_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/design_capacity_label"
                android:textSize="@dimen/text_size_body"
                android:textStyle="bold"
                android:paddingTop="@dimen/spacing_md"
                android:paddingBottom="@dimen/spacing_xs" />

            <EditText
                android:id="@+id/design_capacity_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/design_capacity_hint"
                android:autofillHints="none"
                android:paddingHorizontal="@dimen/input_padding_horizontal"
                android:paddingVertical="@dimen/input_padding_vertical" />

            <TextView
                android:id="@+id/design_capacity_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/design_capacity_description"
                android:textSize="@dimen/text_size_small"
                android:alpha="0.7"
                android:paddingTop="@dimen/spacing_xs" />

        </LinearLayout>

        <!-- Advanced Tiles Header Section (Outside of cards) -->
        <TextView
            android:id="@+id/advanced_tiles_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/advanced_tiles_section_title"
            android:textSize="@dimen/text_size_heading"
            android:textStyle="bold"
            android:paddingBottom="@dimen/spacing_sm"
            android:layout_marginTop="@dimen/spacing_md" />

        <TextView
            android:id="@+id/advanced_tiles_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/advanced_tiles_permission_note"
            android:textSize="@dimen/text_size_small"
            android:alpha="0.8"
            android:paddingBottom="@dimen/spacing_md" />

        <!-- Secure Settings Permission Status -->
        <TextView
            android:id="@+id/secure_settings_permission_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:paddingBottom="@dimen/spacing_md" />

        <Button
            android:id="@+id/secure_settings_permission_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grant_secure_settings_permission"
            android:textSize="@dimen/text_size_body"
            android:paddingHorizontal="@dimen/button_padding_small_horizontal"
            android:paddingVertical="@dimen/button_padding_small_vertical"
            android:layout_marginBottom="@dimen/spacing_lg" />

        <!-- DNS Tile Card -->
        <LinearLayout
            android:id="@+id/dns_tile_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:layout_marginBottom="@dimen/spacing_md">

            <TextView
                android:id="@+id/dns_tile_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dns_tile_title"
                android:textSize="@dimen/text_size_heading"
                android:textStyle="bold"
                android:paddingBottom="@dimen/spacing_sm" />

            <TextView
                android:id="@+id/dns_tile_card_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dns_tile_description"
                android:textSize="@dimen/text_size_small"
                android:alpha="0.7"
                android:paddingBottom="@dimen/spacing_md" />

            <LinearLayout
                android:id="@+id/dns_heading_switch_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_sm">

                <TextView
                    android:id="@+id/dns_heading_switch_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/enable_tile_heading"
                    android:textSize="@dimen/text_size_body" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/dns_show_heading_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- DNS Option 1 - Always visible -->
            <LinearLayout
                android:id="@+id/dns_1_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/spacing_sm">

                <TextView
                    android:id="@+id/dns_1_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dns_option_1"
                    android:textSize="@dimen/text_size_body"
                    android:textStyle="bold"
                    android:paddingBottom="@dimen/spacing_xs" />

                <EditText
                    android:id="@+id/dns_1_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/dns_name_hint"
                    android:autofillHints="none"
                    android:inputType="text"
                    android:singleLine="true"
                    android:paddingHorizontal="@dimen/input_padding_horizontal"
                    android:paddingVertical="@dimen/input_padding_vertical" />

                <EditText
                    android:id="@+id/dns_1_url_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/dns_url_hint"
                    android:autofillHints="none"
                    android:inputType="textUri"
                    android:singleLine="true"
                    android:paddingHorizontal="@dimen/input_padding_horizontal"
                    android:paddingVertical="@dimen/input_padding_vertical"
                    android:layout_marginTop="@dimen/spacing_xs" />

            </LinearLayout>

            <!-- DNS Option 2 - Initially hidden -->
            <LinearLayout
                android:id="@+id/dns_2_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/spacing_md"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/dns_2_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/dns_option_2"
                        android:textSize="@dimen/text_size_body"
                        android:textStyle="bold"
                        android:paddingBottom="@dimen/spacing_xs" />

                    <ImageButton
                        android:id="@+id/dns_remove_2_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_remove"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/remove_dns_entry"
                        android:scaleType="center"
                        android:padding="2dp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/dns_2_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/dns_name_hint"
                    android:autofillHints="none"
                    android:inputType="text"
                    android:singleLine="true"
                    android:paddingHorizontal="@dimen/input_padding_horizontal"
                    android:paddingVertical="@dimen/input_padding_vertical" />

                <EditText
                    android:id="@+id/dns_2_url_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/dns_url_hint"
                    android:autofillHints="none"
                    android:inputType="textUri"
                    android:singleLine="true"
                    android:paddingHorizontal="@dimen/input_padding_horizontal"
                    android:paddingVertical="@dimen/input_padding_vertical"
                    android:layout_marginTop="@dimen/spacing_xs" />

            </LinearLayout>

            <!-- DNS Option 3 - Initially hidden -->
            <LinearLayout
                android:id="@+id/dns_3_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/spacing_md"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/dns_3_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/dns_option_3"
                        android:textSize="@dimen/text_size_body"
                        android:textStyle="bold"
                        android:paddingBottom="@dimen/spacing_xs" />

                    <ImageButton
                        android:id="@+id/dns_remove_3_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_remove"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/remove_dns_entry"
                        android:scaleType="center"
                        android:padding="8dp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/dns_3_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/dns_name_hint"
                    android:autofillHints="none"
                    android:inputType="text"
                    android:singleLine="true"
                    android:paddingHorizontal="@dimen/input_padding_horizontal"
                    android:paddingVertical="@dimen/input_padding_vertical" />

                <EditText
                    android:id="@+id/dns_3_url_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/dns_url_hint"
                    android:autofillHints="none"
                    android:inputType="textUri"
                    android:singleLine="true"
                    android:paddingHorizontal="@dimen/input_padding_horizontal"
                    android:paddingVertical="@dimen/input_padding_vertical"
                    android:layout_marginTop="@dimen/spacing_xs" />

            </LinearLayout>

            <!-- Add DNS Button -->
            <Button
                android:id="@+id/dns_add_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_dns_entry"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/spacing_md"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:background="?attr/selectableItemBackground"
                android:textColor="?android:attr/textColorPrimary"
                android:paddingHorizontal="@dimen/button_padding_small_horizontal"
                android:paddingVertical="@dimen/button_padding_small_vertical"
                android:drawableStart="@drawable/ic_add"
                android:drawablePadding="2dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/dns_configuration_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dns_configuration_description"
                android:textSize="@dimen/text_size_small"
                android:alpha="0.7"
                android:paddingBottom="@dimen/spacing_md" />

        </LinearLayout>

        <!-- Torch/Glyph Tile Card -->
        <LinearLayout
            android:id="@+id/torch_glyph_tile_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:layout_marginBottom="@dimen/spacing_md">

            <TextView
                android:id="@+id/torch_glyph_tile_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/torch_glyph_tile_title"
                android:textSize="@dimen/text_size_heading"
                android:textStyle="bold"
                android:paddingBottom="@dimen/spacing_sm" />

            <TextView
                android:id="@+id/torch_glyph_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
